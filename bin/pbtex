#!/bin/bash
# First argument: name of tex file
# Second argument: boolean to indicate if pdf should be opened
FILENAME="$1"
OPDENPDF="$2"

if [ ! -f "$FILENAME.tex" ]
then
	echo "File $FILENAME.tex does not exist"
else 
  pdflatex "$FILENAME.tex"
	bibtex "$FILENAME.aux"
	pdflatex "$FILENAME.tex"
	pdflatex "$FILENAME.tex"

	if [ "$OPENPDF"=true ]
  then
  	evince "$FILENAME.pdf"
  fi
fi